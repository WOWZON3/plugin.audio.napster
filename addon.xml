<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.napster" name="[COLOR lime]Napster Music[/COLOR]" version="1.8.8" provider-name="Volker Racho">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.t0mm0.common" version="1.1.0"/>
        <import addon="script.module.mutagen"/>
        <import addon="script.module.requests" version="1.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.service" library="playerMP3.py" start="startup" />
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Music Streaming Client</summary>
        <description>Eine stets wachsende Sammlung von Musik Alben im MP3 Format. Durchsuche deine Lieblingsrubrik, den neuesten Platten oder direkt nach einem Interpreten deiner Wahl.</description>
        <news></news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
